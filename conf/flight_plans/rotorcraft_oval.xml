<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="1.5" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="20" name="Rotorcraft Optitrack (Delft)" security_height="0.3">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="1.2" y="-0.6"/>
    <waypoint name="STDBY" x="-0.7" y="-0.8"/>
    <waypoint name="TD" x="0.8" y="-1.7"/>
    <waypoint lat="51.9906273" lon="4.3768128" name="p1"/>
    <waypoint lat="51.9906037" lon="4.3767843" name="p2"/>
    <waypoint lat="51.9906441" lon="4.3768257" name="p3"/>
    <waypoint lat="51.990651" lon="4.376805" name="p4"/>
    <waypoint lat="51.9906213" lon="4.3768628" name="_FA1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="_FA2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="_FA3"/>
    <waypoint lat="51.9906737" lon="4.3768074" name="_FA4"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="_FA1"/>
      <corner name="_FA2"/>
      <corner name="_FA3"/>
      <corner name="_FA4"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 1)"/>
      <!--call fun="NavSetGroundReferenceHere()"/>
      <call fun="NavSetAltitudeReferenceHere()"/-->
      <!--call fun="NavSetWaypointHere(WP_HOME)"/-->
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="Holding point">
      <deroute block="stay_p1"/>
      <!--call fun="NavKillThrottle()"/-->
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <set value="0" var="kill_throttle"/>
      <!--set value="1" var="launch"/-->
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff"><!--strip_button="Takeoff" strip_icon="takeoff.png"-->
      <exception cond="stateGetPositionEnu_f()->z > 2.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="flat_theme/home.png">
      <stay wp="STDBY"/>
    </block>
    <block name="stay_p1" strip_button="Encircle P1" strip_icon="flat_theme/circle-right.png">
      <circle wp="p1" radius="2"/>
    </block>
    <block name="very_small_circle">
      <circle wp="p1" radius="0.5"/>
    </block>
    <block name="small_circle">
      <circle wp="p1" radius="1"/>
    </block>
    <block name="height step" strip_button="step up & down" strip_icon="flat_theme/survey_rect_ns.png">
      <circle wp="TD" radius="1" until="stage_time > 5"/>
      <call fun="NavCopyWaypoint(WP_TD,WP_p1)"/>
	  <call fun="NavSetWaypointAlt(WP_TD, 2.0)"/>
	  <circle wp="TD" radius="1" until="stage_time > 20"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="go_p2">
      <oval p1="p3" p2="p2" radius="1"/>
    </block>
    <block name="trajectory" strip_button="Closed trajectory" strip_icon="flat_theme/oval.png">
      <while cond="TRUE">
        <go wp="p1" approaching_time="0.5"/>
        <go wp="p2" approaching_time="0.5"/>
        <go wp="p3" approaching_time="0.5"/>
        <go wp="p4" approaching_time="0.5"/>
      </while>
    </block>
    <block name="land here"><!-- strip_button="Land Here" strip_icon="land-right.png"-->
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
